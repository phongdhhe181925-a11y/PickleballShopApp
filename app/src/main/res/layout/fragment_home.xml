<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/homeProgressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:visibility="visible" />

        <!-- Carousel Section -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/carouselViewPager"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/carouselIndicators"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:visibility="gone"/>
        </RelativeLayout>

        <!-- Intro Section under Carousel -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp">

            <!-- Title: line 1 -->
            <TextView
                android:id="@+id/homeIntroTitleLine1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chào mừng bạn đến"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="28sp" />

            <!-- Title: line 2 -->
            <TextView
                android:id="@+id/homeIntroTitleLine2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PickleballKing Việt Nam"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="28sp" />

            <!-- Subtitle -->
            <TextView
                android:id="@+id/homeIntroSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Nâng tầm cuộc chơi - Khẳng định đẳng cấp!"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="18sp" />

            <!-- Paragraph 1 -->
            <TextView
                android:id="@+id/homeIntroParagraph1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="PickleballKing Việt Nam tự hào là điểm đến tin cậy đầu tiên cho cộng đồng yêu thích Pickleball, nơi niềm đam mê với môn thể thao năng động này được thăng hoa và lan tỏa. Chúng tôi không chỉ đơn thuần là một địa chỉ mua sắm, mà còn là người đồng hành đáng tin cậy trên hành trình khám phá và phát triển kỹ năng Pickleball của bạn."
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <!-- Paragraph 2 -->
            <TextView
                android:id="@+id/homeIntroParagraph2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Hãy để PickleballKing đồng hành cùng bạn trong hành trình chinh phục những đỉnh cao mới, và cùng nhau xây dựng một cộng đồng Pickleball sôi động tại Việt Nam!"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- Section New Arrival -->
        <TextView
            android:id="@+id/newArrivalLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Arrival"
            android:textSize="27sp"
            android:textStyle="bold"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:textColor="@android:color/black"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnViewAllNewArrival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:text="Xem tất cả"
            android:textAllCaps="false"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp"
            android:backgroundTint="@android:color/black"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/newArrivalRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:nestedScrollingEnabled="false"
            android:visibility="gone"
            tools:visibility="visible" />

        <!-- Section Best Seller -->
        <TextView
            android:id="@+id/bestSellerLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Best Seller"
            android:textSize="27sp"
            android:textStyle="bold"
            android:paddingHorizontal="16dp"
            android:paddingTop="24dp"
            android:paddingBottom="8dp"
            android:textColor="@android:color/black"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnViewAllBestSeller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:text="Xem tất cả"
            android:textAllCaps="false"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp"
            android:backgroundTint="@android:color/black"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/bestSellerRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:visibility="gone"
            tools:visibility="visible" />

        <!-- Section Giày -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="24dp">

            <TextView
                android:id="@+id/shoesLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giày Pickleball"
                android:textSize="27sp"
                android:textStyle="bold"
                android:paddingHorizontal="16dp"
                android:paddingBottom="8dp"
                android:textColor="@android:color/black"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnViewAllShoes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                android:text="Xem tất cả"
                android:textAllCaps="false"
                android:paddingHorizontal="24dp"
                android:paddingVertical="12dp"
                android:backgroundTint="@android:color/black"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/shoesRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingVertical="8dp"
                    android:clipToPadding="false"
                    android:visibility="gone" />

                <ImageButton
                    android:id="@+id/btnShoesPrev"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_arrow_left"
                    android:background="@drawable/btn_nav_background"
                    android:visibility="gone"
                    android:padding="12dp"
                    android:contentDescription="Sản phẩm trước" />

                <ImageButton
                    android:id="@+id/btnShoesNext"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_arrow_right"
                    android:background="@drawable/btn_nav_background"
                    android:visibility="gone"
                    android:padding="12dp"
                    android:contentDescription="Sản phẩm sau" />

            </RelativeLayout>
        </LinearLayout>

        <!-- Section Bóng thi đấu -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="24dp">

            <TextView
                android:id="@+id/ballsLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bóng thi đấu"
                android:textSize="27sp"
                android:textStyle="bold"
                android:paddingHorizontal="16dp"
                android:paddingBottom="8dp"
                android:textColor="@android:color/black"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnViewAllBalls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                android:text="Xem tất cả"
                android:textAllCaps="false"
                android:paddingHorizontal="24dp"
                android:paddingVertical="12dp"
                android:backgroundTint="@android:color/black"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/ballsRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingVertical="8dp"
                    android:clipToPadding="false"
                    android:visibility="gone" />

                <ImageButton
                    android:id="@+id/btnBallsPrev"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_arrow_left"
                    android:background="@drawable/btn_nav_background"
                    android:visibility="gone"
                    android:padding="12dp"
                    android:contentDescription="Sản phẩm trước" />

                <ImageButton
                    android:id="@+id/btnBallsNext"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_arrow_right"
                    android:background="@drawable/btn_nav_background"
                    android:visibility="gone"
                    android:padding="12dp"
                    android:contentDescription="Sản phẩm sau" />

            </RelativeLayout>
        </LinearLayout>

        <include layout="@layout/footer" />

    </LinearLayout>
</ScrollView>
