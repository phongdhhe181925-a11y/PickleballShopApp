<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:clickable="true"
    android:focusable="true"
    tools:context=".CartFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:paddingHorizontal="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giỏ hàng"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_centerVertical="true"/>

        <ImageButton
            android:id="@+id/fragment_close_cart_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:contentDescription="Đóng"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/dividerSeparator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:background="#E0E0E0"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fragmentCartRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/fragmentBottomContainer"
            android:padding="8dp" />

        <TextView
            android:id="@+id/fragmentEmptyCartText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giỏ hàng của bạn hiện\n đang trống."
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:visibility="gone"
            android:layout_below="@+id/dividerSeparator"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp"/>

        <!-- Empty-state suggestions: 2 lines + 3 category buttons -->
        <LinearLayout
            android:id="@+id/emptySuggestionsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/fragmentEmptyCartText"
            android:layout_marginTop="16dp"
            android:paddingHorizontal="16dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/emptySuggestTitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bạn không biết bắt đầu từ đâu?"
                android:textColor="@android:color/black"
                android:textStyle="normal"
                android:textSize="14sp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/emptySuggestTitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thử xem những sản phẩm sau đây nhé"
                android:textColor="@android:color/black"
                android:textStyle="normal"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:layout_gravity="center_horizontal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <!-- Racket button (70% width using spacers) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp"
                    android:weightSum="1">

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="0.125" />

                    <LinearLayout
                        android:id="@+id/btnSuggestRacket"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="0.75"
                        android:background="#EEEEEE"
                        android:paddingHorizontal="12dp"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true">

                    <ImageView
                        android:id="@+id/iconSuggestRacket"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="Vợt" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="Vợt Pickleball"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_chevron_right"
                            android:contentDescription=">" />
                    </LinearLayout>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="0.125" />
                </LinearLayout>

                <!-- Shoes button (70% width using spacers) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp"
                    android:weightSum="1">

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="0.125" />

                    <LinearLayout
                        android:id="@+id/btnSuggestShoes"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="0.75"
                        android:background="#EEEEEE"
                        android:paddingHorizontal="12dp"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true">

                    <ImageView
                        android:id="@+id/iconSuggestShoes"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="Giày" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="Giày Pickleball"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_chevron_right"
                            android:contentDescription=">" />
                    </LinearLayout>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="0.125" />
                </LinearLayout>

                <!-- Balls button (70% width using spacers) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:weightSum="1">

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="0.125" />

                    <LinearLayout
                        android:id="@+id/btnSuggestBalls"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="0.75"
                        android:background="#EEEEEE"
                        android:paddingHorizontal="12dp"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true">

                    <ImageView
                        android:id="@+id/iconSuggestBalls"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="Bóng" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="Bóng Pickleball"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_chevron_right"
                            android:contentDescription=">" />
                    </LinearLayout>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="0.125" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragmentBottomContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:background="@color/light_gray_background"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/fragmentShippingNote"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Phí vận chuyển sẽ được\n tính ở các bước tiếp theo."
                    android:textSize="18sp"
                    android:textColor="@android:color/black"/>

                <LinearLayout
                    android:id="@+id/fragmentTotalsContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/fragmentTvCartTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tổng phụ"
                        android:textStyle="normal"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:gravity="end"/>

                    <TextView
                        android:id="@+id/fragmentTvCartPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0₫"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:textSize="22sp"
                        android:gravity="end"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/fragmentCheckoutButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Thanh toán"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@android:color/black"
                    android:padding="16dp"
                    android:textSize="18sp" />

                <Space
                    android:layout_width="12dp"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/fragmentViewCartButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Xem giỏ hàng"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    android:backgroundTint="#EEEEEE"
                    android:padding="16dp"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>