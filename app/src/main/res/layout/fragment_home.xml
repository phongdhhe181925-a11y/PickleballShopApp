<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/homeProgressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:visibility="visible" />

        <!-- Section New Arrival -->
        <TextView
            android:id="@+id/newArrivalLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Arrival"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:textColor="@android:color/black"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/newArrivalRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:visibility="gone"
            tools:visibility="visible" />

        <!-- Section Best Seller -->
        <TextView
            android:id="@+id/bestSellerLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Best Seller"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingHorizontal="16dp"
            android:paddingTop="24dp"
            android:paddingBottom="8dp"
            android:textColor="@android:color/black"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/bestSellerRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:visibility="gone"
            tools:visibility="visible" />

        <!-- Section Giày -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="24dp">

            <TextView
                android:id="@+id/shoesLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giày"
                android:textSize="22sp"
                android:textStyle="bold"
                android:paddingHorizontal="16dp"
                android:paddingBottom="8dp"
                android:textColor="@android:color/black"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/shoesRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingVertical="8dp"
                    android:clipToPadding="false"
                    android:visibility="gone" />

                <ImageButton
                    android:id="@+id/btnShoesPrev"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_arrow_left"
                    android:background="@drawable/btn_nav_background"
                    android:visibility="gone"
                    android:padding="12dp"
                    android:contentDescription="Sản phẩm trước" />

                <ImageButton
                    android:id="@+id/btnShoesNext"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_arrow_right"
                    android:background="@drawable/btn_nav_background"
                    android:visibility="gone"
                    android:padding="12dp"
                    android:contentDescription="Sản phẩm sau" />

            </RelativeLayout>
        </LinearLayout>

        <!-- Section Bóng thi đấu -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="24dp">

            <TextView
                android:id="@+id/ballsLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bóng thi đấu"
                android:textSize="22sp"
                android:textStyle="bold"
                android:paddingHorizontal="16dp"
                android:paddingBottom="8dp"
                android:textColor="@android:color/black"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/ballsRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingVertical="8dp"
                    android:clipToPadding="false"
                    android:visibility="gone" />

                <ImageButton
                    android:id="@+id/btnBallsPrev"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_arrow_left"
                    android:background="@drawable/btn_nav_background"
                    android:visibility="gone"
                    android:padding="12dp"
                    android:contentDescription="Sản phẩm trước" />

                <ImageButton
                    android:id="@+id/btnBallsNext"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_arrow_right"
                    android:background="@drawable/btn_nav_background"
                    android:visibility="gone"
                    android:padding="12dp"
                    android:contentDescription="Sản phẩm sau" />

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
